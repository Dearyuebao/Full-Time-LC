class Solution {
    public int minCostClimbingStairs(int[] cost) {
        if(cost.length == 0) return 0;
        int n = cost.length;
        if(n == 1) return cost[0];
        if(n == 2) return Math.min(cost[0], cost[1]);
        int[] dp = new int[n - 1];
        dp[0] = cost[0];
        dp[1] = cost[1];
        for(int i = 2; i < n - 1; i++) {
            dp[i] = Math.min(dp[i - 1], dp[i - 2]) + cost[i];
        }
        return Math.min(dp[n - 2], dp[n - 3] + cost[n - 1]);
    }
}
